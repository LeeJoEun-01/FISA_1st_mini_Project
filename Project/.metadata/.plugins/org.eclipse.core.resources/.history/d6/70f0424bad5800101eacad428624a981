package view;

import java.util.Scanner;

import controller.MatchController;
import model.Model;
import model.Student;

public class MatchView {
	// 친구 이름 입력 화면
	public static void inputFriendNameView() {
		Scanner sc = new Scanner(System.in);
		Student me = Model.getCurrentUser();
		
		System.out.print("궁합을 보고 싶은 신구의 이름을 입력하세요 : ");
		String friendName = sc.nextLine();
		
		try {
			double score = MatchController.calculateCompatibility(friendName);
			System.out.println(me.getName() + "님과 " + friendName + "님의 궁합은 " + score + "점 입니다!");
			System.out.printf("%s님과 %s님의 궁합은 %2f점입니다!", me.getName(), friendName, score);
			if (score >= 80) {
                System.out.println("✨ 환상의 케미! 최고의 친구 ✨");
            } else if (score >= 60) {
                System.out.println("😊 꽤 잘 맞는 친구예요!");
            } else if (score >= 40) {
                System.out.println("🙂 보통의 궁합입니다.");
            } else {
                System.out.println("😅 아직은 서먹한 사이일 수 있어요.");
            }
			
		} catch (Exception e) {
			System.out.println(e.getMessage());
			inputFriendNameView();
		}
	}
}
