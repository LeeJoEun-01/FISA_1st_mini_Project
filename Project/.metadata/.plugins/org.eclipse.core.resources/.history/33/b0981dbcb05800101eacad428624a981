package controller;

import java.util.ArrayList;
import java.util.List;

import model.Model;
import model.Student;

public class FavFoodMatchController {

	public static List<String> fintStudentsByFood(String foodName) throws Exception{
		List<String> matched = new ArrayList<>();
		
		for (Student s : Model.getModel().getStudents()) {
			for (String food : s.getFood()) {
				if (food.equals(foodName)) {
					matched.add(s.getName());
					break;
				}
			}
		}
		
		if (matched.isEmpty()) {
			throw new Exception("ğŸ˜¢ í•´ë‹¹ ìŒì‹ì„ ì¢‹ì•„í•˜ëŠ” ì¹œêµ¬ê°€ ì—†ìŠµë‹ˆë‹¤. ì£¼ë³€ ì¹œêµ¬ì—ê²Œ í•¨ê»˜ ë¨¹ìê³  ê¶Œìœ í•´ë³¼ê¹Œìš”?");
		}
		
		return matched;
	}
}
